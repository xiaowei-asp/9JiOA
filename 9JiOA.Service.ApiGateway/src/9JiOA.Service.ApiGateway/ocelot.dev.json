{
  "Routes": [
    {
      "DownstreamPathTemplate": "/api/identitys",
      "DownstreamScheme": "http",
      //"DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          //"Port": 44311
          "Port": 5001
        }
      ],
      "UpstreamPathTemplate": "/identity-api",
      "UpstreamHttpMethod": [ "Get" ],

      "AuthenticationOptions": {
        "AuthenticationProviderKey": "TestKey",
        "AllowedScopes": []
      },

      "RateLimitOptions": {
        "ClientWhitelist": [],
        "EnableRateLimiting": true,
        "Period": "5s",
        "PeriodTimespan": 1,
        "Limit": 1
      },
      "FileCacheOptions": { "TtlSeconds": 30 }
    },
    {
      "DownstreamPathTemplate": "/api/customers",
      //"DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          //"Port": 44312
          "Port": 5002
        }
      ],
      "UpstreamPathTemplate": "/customer-api",
      "UpstreamHttpMethod": [ "Get" ],

      "RateLimitOptions": {
        "ClientWhitelist": [],
        "EnableRateLimiting": true,
        "Period": "5s",
        "PeriodTimespan": 1,
        "Limit": 1
      },
      "FileCacheOptions": { "TtlSeconds": 30 }
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:5000"
    //"BaseUrl": "https://localhost:44310"
  }
}